{
  "name": "nectar-utilities",
  "version": "0.0.17",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "copy-packages": "copyfiles -u 1 packages/**/package.json dist/",
    "pre-commit": "node ./scripts/precommit.js && git add programs/**/Cargo.toml && git add Cargo.lock",
    "pre-push": "echo LFG",
    "publish-all": "node ./scripts/publishall.js",
    "compile": "tsc",
    "postcompile": "yarn copy-packages",
    "build:program": "anchor build",
    "build:sdk": "yarn solita && yarn compile",
    "build": "yarn build:program & yarn build:sdk",
    "deploy": "anchor deploy",
    "build-deploy": "yarn build && yarn deploy",
    "test": "jest --verbose"
  },
  "dependencies": {
    "@honeycomb-protocol/currency-manager": "^0.0.8",
    "@honeycomb-protocol/hive-control": "^0.0.101",
    "@honeycomb-protocol/nectar-staking": "^0.0.49",
    "@metaplex-foundation/js": "^0.18.1",
    "@metaplex-foundation/mpl-token-auth-rules": "^1.2.0",
    "@metaplex-foundation/mpl-token-metadata": "^2.10.0",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@solana/spl-account-compression": "^0.1.8",
    "@solana/spl-token": "^0.3.7",
    "@solana/web3.js": "^1.73.2",
    "@types/jest": "^29.5.1",
    "dotenv": "^16.0.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "devDependencies": {
    "@metaplex-foundation/solita": "^0.19.3",
    "@types/bn.js": "^5.1.0",
    "copyfiles": "^2.4.1",
    "husky": "^8.0.3",
    "prettier": "^2.6.2",
    "typescript": "^4.3.5"
  }
}
